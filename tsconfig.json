{
  "compilerOptions": {
    "module": "amd",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outFile": "./dist/index.js",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "types": ["@types/node", "@types/jest"]
  },
  "include": ["src/**/*"]
}
